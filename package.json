{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "analyze": "cross-env ANALYZE=1 umi build",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@umijs/test": "^3.2.28",
    "dayjs": "^1.9.6",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "tailwindcss": "^1.0.0",
    "umi": "^3.2.28"
  },
  "devDependencies": {
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "yorkie": "^2.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "cross-env": "^7.0.2",
    "typescript": "^4.1.0",
    "umi-request": "^1.3.5"
  }
}
